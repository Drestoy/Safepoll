<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >

    <LinearLayout android:id="@+id/left_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip">
        <ImageView
            android:id="@+id/user_Image"
            android:contentDescription="@string/image_contentDescription"
            android:layout_width="50dip"
            android:layout_height="50dip" />
    </LinearLayout>
 
    <TextView
        android:id="@+id/user_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/left_thumbnail"
        android:layout_toRightOf="@+id/left_thumbnail"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/user_Info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_Name"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/left_thumbnail"  />

    <ImageButton
        android:id="@+id/request_accept_button"
        android:src="@drawable/ic_action_accept"
        android:contentDescription="@string/image_contentDescription"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/request_discard_button" />
    
    <ImageButton
        android:id="@+id/request_discard_button"
        android:src="@drawable/ic_action_discard"
        android:contentDescription="@string/image_contentDescription"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp" />

</RelativeLayout>
